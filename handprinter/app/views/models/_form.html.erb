<section id="model-form">
    <div class="container">
      <div class="row">
          <div class="col-xs-12">
              <div class="form-wrap">
                <h1>Creating A Model</h1>
                    <form role="form" action="javascript:;" method="post" id="model-form" autocomplete="off">
                        <div class="form-group">
                            <label for="model-name" class="sr-only">Model Name</label>
                            <input type="text" name="model-name" id="model-name" class="form-control" size="20" placeholder="My Handprinting Model">
                            <select name="Type">
                                <option value="act">Act</option>
                                <option value="behavioral-change">Behavioral Change</option>
                                <option value="choice">Choice</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description" class="sr-only">Description</label>
                            <input type="textarea" rows="4" cols="30" name="description" id="description" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="anchor" class="sr-only">Anchor</label>
                            <input type="text" name="anchor" id="anchor" class="form-control" placeholder="">
                            <p> for </p>
                            <!-- add label if needed-->
                            <input type="number" name="anchor-number" id="anchor-number" class="form-control">
                            <!-- add label if needed-->
                            <input type="text" name="anchor-unit" id="anchor-unit" class="form-control">
                        </div>
                         <div class="form-group">
                            <label for="claim" class="sr-only">Claim</label>
                            <input type="text" name="claim" id="claim" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="source" class="sr-only">Source</label>
                            <input type="text" name="source" id="source" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="input" class="sr-only">Input</label>
                            <input type="text" name="input" id="input" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="equation" class="sr-only">Model Equation</label>
                            <input type="text" name="equation" id="equation" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="assumption" class="sr-only">Assumption</label>
                            <input type="text" name="assumption" id="assumption" class="form-control" placeholder="">
                        </div>

                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Log in">
                    </form>

              </div>

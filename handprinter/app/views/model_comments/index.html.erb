<p id="notice"><%= notice %></p>

<h1>Listing Model Comments</h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>User</th>
      <th>Date created</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @model_comments.each do |model_comment| %>
      <tr>
        <td><%= model_comment.model_id %></td>
        <td><%= model_comment.user_id %></td>
        <td><%= model_comment.date_created %></td>
        <td><%= model_comment.text %></td>
        <td><%= link_to 'Show', model_comment %></td>
        <td><%= link_to 'Edit', edit_model_comment_path(model_comment) %></td>
        <td><%= link_to 'Destroy', model_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

